{% schema %}
{
  "name": "Gift Card Image",
  "settings": [
    {
      "type": "image_picker",
      "id": "gift_card_image",
      "label": "Gift Card Image",
      "info": "Recommended size: 380px x 250px"
    },
    {
      "type": "text",
      "id": "image_alt",
      "label": "Image alt text",
      "default": "Gift card"
    },
    {
      "type": "range",
      "id": "image_width",
      "min": 200,
      "max": 800,
      "step": 20,
      "unit": "px",
      "label": "Image width",
      "default": 380
    },
    {
      "type": "range",
      "id": "image_height",
      "min": 100,
      "max": 600,
      "step": 25,
      "unit": "px",
      "label": "Image height",
      "default": 250
    }
  ],
  "presets": [
    {
      "name": "Gift Card Image"
    }
  ]
}
{% endschema %}

<div class="gift-card-section__container">
    {%- assign image_width = section.settings.image_width | default: 380 -%}
    {%- assign image_height = section.settings.image_height | default: 250 -%}

    {%- if section.settings.gift_card_image -%}
        {{ section.settings.gift_card_image | image_url: width: image_width | image_tag:
        class: 'gift-card-section__image',
        alt: section.settings.image_alt,
        width: image_width,
        height: image_height,
        loading: 'eager'
        }}
    {%- endif -%}
</div>

{% style %}
    .gift-card-section__container {
    width: {{ image_width }}px;
    margin: 2rem auto;
    }

    .gift-card-section__image {
    width: 100%;
    height: {{ image_height }}px;
    object-fit: contain;
    }
{% endstyle %}